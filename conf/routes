# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET         /                                                controllers.Application.index

GET         /data/channels                                   controllers.DataChannel.getAll
GET         /data/channels/:channelId                        controllers.DataChannel.get(channelId)
PUT         /data/channels                                   controllers.DataChannel.insert()
POST        /data/channels/:channelId                        controllers.DataChannel.update(channelId)
DELETE /data/channels/:channelId controllers.DataChannel.delete(channelId)

GET         /data/content                                    controllers.DataContent.allContent
GET         /data/content/:contentId                         controllers.DataContent.content(contentId)

GET         /data/series                                     controllers.DataSeries.allSources
GET         /data/series/:sourceId                           controllers.DataSeries.sources(sourceId)

GET         /jobs/content/updateAll                          controllers.JobsContent.updateAllChannelContent
GET         /jobs/channel/:channelId/updateAllSources        controllers.JobsChannel.updateSourcesFromPlaylists(channelId)

GET         /api/getRandomVideo/:channelId                   controllers.Api.getRandomVideo(channelId)
GET         /api/getRandomPlaylist/:channelId                controllers.Api.getRandomPlaylist(channelId)
POST        /api/getQueue/:channelId                         controllers.Api.getPlaylistQueue(channelId)
GET         /api/setChannelCookie/:channelId                 controllers.Api.setChannelCookie(channelId)

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file                                    controllers.Assets.at(path="/public", file)

    