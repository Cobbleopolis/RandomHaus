# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET        /                                                controllers.Application.index

GET        /data/channels                                   controllers.DataChannel.allChannels
GET        /data/channels/:channelID                        controllers.DataChannel.channel(channelID)

GET        /data/content                                    controllers.DataContent.allContent
GET        /data/content/:contentID                         controllers.DataContent.content(contentID)

GET        /data/sources                                    controllers.DataSource.allSources
GET        /data/sources/:sourceID                          controllers.DataSource.sources(sourceID)

GET        /jobs/content/updateAll                          controllers.JobsContent.updateAllChannelContent
GET        /jobs/channel/:channelID/updateAllSources        controllers.JobsChannel.updateSourcesFromPlaylists(channelID)

GET        /api/getRandomVideo                              controllers.Api.getRandomVideo

# Map static resources from the /public folder to the /assets URL path
GET        /assets/*file                                    controllers.Assets.at(path="/public", file)

    